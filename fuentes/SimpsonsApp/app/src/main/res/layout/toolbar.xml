<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/Theme.AppCompat.Light"
    android:id="@+id/toolbar"
    android:background="@color/background"
    >

    <ImageView
        android:layout_width="@dimen/ancho_logo_toolbar"
        android:layout_height="@dimen/largo_logo_toolbar"
        android:src="@drawable/ic_logo_the_simpsons"
        android:layout_marginLeft="@dimen/margin_logo_toolbar"
        android:layout_marginTop="@dimen/margin_toolbar"
        android:layout_marginBottom="@dimen/margin_toolbar">
    </ImageView>

</androidx.appcompat.widget.Toolbar>